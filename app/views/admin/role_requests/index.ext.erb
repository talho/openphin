<h1>Pending Role Requests</h1>
<br>
<table class='pending_role_requests'>
  <tr>
    <th>Requester</th>
    <th>Role</th>
    <th>Jurisdiction</th>
    <th>Actions</th>
  </tr>

<% @role_requests.each do |role_request| %>
  <tr class='pending_role_requests'>
    <% if role_request.user.nil? %>
    <td class='requester_email'>unknown user</td>
    <% else %>
    <td class='requester_email'><%= link_to role_request.user.email, user_profile_path(role_request.user) %></td>
    <% end %>
    <td class='role'><%=h role_request.role.name %></td>
    <td class='jurisdiction'><%=h role_request.jurisdiction.name %></td>
    <td><a href='<%=deny_admin_role_request_path(role_request) %>' class='deny_link'>Deny</a> | <a href='<%=approve_admin_role_request_path(role_request) %>' class='approve_link'>Approve</a></td>
  </tr>
<% end %>
</table>

<br />
