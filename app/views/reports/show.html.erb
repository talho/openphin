<%= content_tag(:h1,"Users as of #{Time.now}") %>
<%- content_tag(:table,:border=>"1") do -%>
  <%- content_tag(:tr) do -%>
    <%=content_tag(:th,"Name")%>
    <%=content_tag(:th,"Email")%>
    <%=content_tag(:th,"Roles")%> 
  <%- end -%>
  <%- results.each do |user| -%>
    <%- content_tag(:tr) do -%>
      <%= content_tag(:td, user["display_name"]) %>
      <%= content_tag(:td, user["email"]) %>
      <%= content_tag(:td, to_rpt(user["role_memberships"])) %>
    <%- end -%>
  <%- end -%>
<%- end -%>
