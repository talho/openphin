<%- filtered = filters.present? ? "(FILTERED)" : "" -%>
<%- content_tag(:table,:cellspacing=>"0", :class=>"BreadnButter") do -%>
  <%= content_tag(:caption, "Alerts #{filtered} as of #{Time.now}", :style=>"text-align:center")%>
  <%- content_tag(:thead) do -%>
    <%- content_tag(:tr) do -%>
      <%=content_tag(:th,"Identifier")%>
      <%=content_tag(:th,"Title")%>
      <%=content_tag(:th,"Author")%>
      <%=content_tag(:th,"Created At")%>
      <%=content_tag(:th,"Severity")%>
      <%=content_tag(:th,"Status")%>
      <%=content_tag(:th,"Acknowledge")%>
      <%=content_tag(:th,"Sensitive")%>
      <%=content_tag(:th,"Delivery Time")%>
      <%=content_tag(:th,"Cross-Jurisdictional")%>
      <%# Total Recipients %>
      <%#  Methods %>
    <%- end -%>
  <%- end -%>
  <%- results.each_with_index do |r,i| -%>
    <%- content_tag(:tr,:class=>"#{(i%2 > 0) ? "Odd report-data-first" : "Even report-data-first"}") do -%>
      <%= content_tag(:td, r["identifier"]) %>
      <%= content_tag(:td, r["title"]) %>
      <%= content_tag(:td, r["author"]) %>
      <%= content_tag(:td, r["created_at"].strftime("%B %d, %Y %I:%M %p %Z")) %>
      <%= content_tag(:td, r["severity"]) %>
      <%= content_tag(:td, r["status"]) %>
      <%= content_tag(:td, r["Acknowledge"]?"Yes":"None") %>
      <%= content_tag(:td, r["sensitive"].present? ? r["sensitive"]:"&nbsp;") %>
      <%= content_tag(:td, (r["delivery_time"].to_i/60).to_s + " hours") %>
      <%= content_tag(:td, r["not_cross_jurisdictional"]?"Yes":"No") %>
    <%- end -%>
    <%- content_tag(:tr,:class=>"#{(i%2 > 0) ? "Odd" : "Even"}") do -%>
      <%=content_tag(:th, "Short Message", :class=>"RowWrap") %>
      <%=content_tag(:td,r["short_message"].present? ? r["short_message"]:"&nbsp;", :colspan=>"10")%>
    <%- end -%>
    <%- content_tag(:tr,:class=>"#{(i%2 > 0) ? "Odd" : "Even"}") do -%>
      <%=content_tag(:th,"Message", :class=>"RowWrap")%>
      <%=content_tag(:td,r["message"], :colspan=>"10")%>
    <%- end -%>
  <%- end -%>
<%- end -%>
