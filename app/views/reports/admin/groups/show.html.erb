<%- unless (group = report) -%>
  This Group does not exist or you do not have authorization to view it.
<%- else -%>

  <%- filtered = filters.present? ? "(FILTERED)" : "" -%>

  <%- content_tag(:table,:cellspacing=>"0", :class=>"BreadnButter") do -%>

    <%- content_tag(:caption, :style=>"text-align:center") do -%>

      <%= content_tag(:h2, "Group: #{h(group['name'])} as of #{report['created_at']}", :style=>"text-align:center") %>
      <%- content_tag(:div) do -%>
        <%= content_tag(:h5, 'Scope: ' + h( group["scope"] ) + " of " + s( group["owner_jurisdiction"] )) %>
      <%- end -%>

      <%- content_tag(:div) do -%>
        <%= content_tag(:h5, "Jurisdictions:") %>
        <%- content_tag(:ul) do -%>
          <%- jurs = (jurs = group["jurisdictions"]).empty? ? "&lt;unspecified&gt;" : jurs.join(', ') -%>
          <%= content_tag(:li, jurs) %>
        <%- end -%>
      <%- end -%>

      <%- content_tag(:div) do -%>
        <%= content_tag(:h5, "Roles:") %>
        <%- content_tag(:ul) do -%>
          <%- roles = (roles = group["roles"]).empty? ? "&lt;unspecified&gt;" : roles.join(', ') -%>
          <%= content_tag(:li, roles) %>
        <%- end -%>
      <%- end -%>
      <%= content_tag(:h3, "#{entries.count} Members Found" ) %>

    <%- end -%>

    <%- if entries.present? -%>
      <%= render :partial => "reports/admin/groups/entries", :locals => {:entries => entries, :directives => directives} %>
    <%- end -%>

  <%- end -%>

<%- end -%>
<%= content_tag(:p,"Report Generated #{filtered} on: #{Time.now.utc} for #{current_user.display_name}") %>

