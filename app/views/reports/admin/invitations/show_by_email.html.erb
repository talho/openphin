<%- unless (invitation = report) -%>
  This Invitation does not exist or you do not have authorization to view it.
<%- else -%>

  <%- filtered = filters.present? ? "(FILTERED)" : "" -%>

  <%- content_tag(:table,:cellspacing=>"0", :class=>"BreadnButter") do -%>

    <%- content_tag(:caption, :style=>"text-align:center") do -%>
      <%= content_tag(:h2, "#{invitation['name']}<br>Invitation Report by Email Address<br>as of #{report['created_at']}") %>
      <%- content_tag(:div) do -%>
        <%= render :partial =>"reports/admin/invitations/registrations", :locals => {:regs => stats["registrations"]} %>
      <%- end -%>
      <%= content_tag(:h3, "#{entries.count} Invitees Found" ) %>
    <%- end -%>

    <%- if entries.present? -%>
      <%= render :partial => "reports/admin/invitations/entries", :locals => {:entries => entries, :directives => directives} %>
    <%- end -%>

  <%- end -%>

<%- end -%>
<%= content_tag(:p,"Report Generated #{filtered} on: #{Time.now.utc} for #{current_user.display_name}") %>
