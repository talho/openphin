<%- content_tag(:thead) do -%>
  <%- content_tag(:tr) do -%>
    <%- directives.each do |directive| -%>
      <%= content_tag(:td, directive[1] ) %>
    <%- end -%>
  <%- end -%>
<%- end -%>
<%- content_tag(:div, :class=>"nobreak") do -%>
  <%- entries.each_with_index do |entry,i| -%>
    <%- content_tag(:tr,:class=>"#{(i%2 > 0) ? "Odd" : "Even"}") do -%>
      <%- directives.each do |directive| -%>
        <%= content_tag(:td, directive.size>2 ? send(directive[2],entry[directive[0]]) : entry[directive[0]] ) %>
      <%- end -%>
    <%- end -%>
  <%- end -%>
<%- end  -%>



